<% if notice %>
    <p id="notice"><%= notice %></p>
<% end %>
<h1><strong>Your Pragmatic Catalog --- Buy sth you rich dog</strong></h1>
<% cache ['store', Product.latest] do %>
    <% @products.each do |product| %>
        <% cache ['entry', product] do %>
            <div class="entry">
              <%= image_tag(product.image_url) %>
              <h3><%= product.title %></h3>
              <div class = 'text-left'>
                <%= sanitize(product.description) %>
              </div>
              <div class="price_line">
                <span class="price">Price: <%= number_to_currency(product.price) %></span>
                <%= button_to 'Add to Cart', line_items_path(product_id: product), class: "btn", remote: true %>
              </div>
            </div>
        <% end %>
    <% end %>
<% end %>